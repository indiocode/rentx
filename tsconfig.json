{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"]
		},
		"rootDirs": ["./src"],
		"target": "ES2022",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "CommonJS",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}
